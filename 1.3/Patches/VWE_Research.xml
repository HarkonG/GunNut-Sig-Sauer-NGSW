<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="HRK_Research_GunNut_NGSW"]/baseCost</xpath>
                    <value>
                        <baseCost>1800</baseCost>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="HRK_Research_GunNut_NGSW_Custom"]/baseCost</xpath>
                    <value>
                        <baseCost>1000</baseCost>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="HRK_Research_GunNut_NGSW"]/prerequisites</xpath>
                    <value>
                        <prerequisites>
                            <li>VWE_SpecializedFirearms</li>
                            <li>VWE_DesignatedMarksmanRifle</li>
                            <li>VWE_HeavyWeapons</li>
                        </prerequisites>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>