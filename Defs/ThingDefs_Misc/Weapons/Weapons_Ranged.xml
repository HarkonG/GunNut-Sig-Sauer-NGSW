  <!--===== MCX SPEAR =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>GN_SPEARMCX</defName>
    <label>SIG MCX Spear</label>
    <description>The MCX Spear is a top of the line industrial battle rifle used by operators and military personal for its reliability and performance. \n\nThis weapon is chambered in a cheaper unconventional cartridge that is more effective against armored targets.</description>
    <graphicData>
      <texPath>Things/Weapons/GN_SPEARMCX</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>GN_Interact_NGSW</soundInteract>
    <recipeMaker>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>65</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>GN_Bullet_277SIGFury</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>30</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>GN_Shot_68SIG</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <thingCategories Inherit="False">
      <li>GunNut</li>
    </thingCategories>
    <weaponTags Inherit="False">
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <thingSetMakerTags Inherit="False">
      <li>RewardStandardMidFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
  </ThingDef>

